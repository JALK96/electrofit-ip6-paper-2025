title			= Cysteine protease domain of TcdB
define			= -DPOSRES	; position restrain the protein, POSRES for ligand, but not necessary if simulated alone

; Run parameters
integrator		= md		; leap-frog integrator
; TEST SHORT: reduce to 2 ps
nsteps			= 1000		; 0.002 * 1000 = 2 ps (orig 50000 = 100 ps)
dt	    	= 0.002		; 2 fs

; Output control
nstxout			        = 0			    ; save coordinates every 0 ps
nstvout			        = 0			    ; save velocities every 0 ps
nstenergy		        = 100			; save energies every 0.2 ps (orig 500)
nstxout-compressed      = 200			; write coordinate every 0.4 ps
compressed-x-grps	    = system		; Do not write out the water or counter ions

; Bond parameters
continuation	        = no		    ; first dynamics run
constraint-algorithm    = LINCS	    	; holonomic constraints 
constraints	            = all-bonds	    ; all bonds (even heavy atom-H bonds) constrained
lincs-iter	            = 1		        ; accuracy of LINCS
lincs-order	            = 4		        ; also related to accuracy

; Neighborsearching
cutoff-scheme   	= Verlet
ns-type		    	= grid		    ; search neighboring grid cells
nstlist		    	= 100		    ; 20 fs, largely irrelevant with Verlet
rcoulomb	    	= 1		        ; short-range electrostatic cutoff (in nm)
rvdw		    	= 1		        ; short-range van der Waals cutoff (in nm)
DispCorr            = EnerPres  	; account for cut-off vdW scheme

; Electrostatics
coulombtype	    	= PME		; Particle Mesh Ewald for long-range electrostatics
pme-order	    	= 4		    ; cubic interpolation
fourierspacing		= 0.15		; grid spacing for FFT

; Temperature coupling is on
tcoupl			        = V-rescale		    ; modified Berendsen thermostat
tc-grps                 = system   	        ; two coupling groups - more accurate
tau_t                   = 0.1		        ; time constant, in ps
ref_t                   = 310   	        ; reference temperature, one for each group, in K

; Pressure coupling is off
pcoupl			= no 		; no pressure coupling in NVT

; Periodic boundary conditions
pbc			= xyz		; 3-D PBC

; Velocity generation
gen-vel			= yes		; assign velocities from Maxwell distribution
gen-temp		= 310		; temperature for Maxwell distribution
gen-seed		= -1		; generate a random seed
